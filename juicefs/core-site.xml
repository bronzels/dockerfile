<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
    </property>
    <property>
        <name>fs.jfs.impl</name>
        <value>io.juicefs.JuiceFileSystem</value>
    </property>
    <property>
        <name>fs.AbstractFileSystem.jfs.impl</name>
        <value>io.juicefs.JuiceFS</value>
    </property>
    <property>
        <name>fs.defaultFS</name>
        <value>jfs://miniofs</value>
    </property>

    <!--
        <property>
            <name>fs.hdfs.impl</name>
            <value>io.juicefs.JuiceFileSystem</value>
        </property>
        <property>
            <name>fs.AbstractFileSystem.hdfs.impl</name>
            <value>io.juicefs.JuiceFS</value>
        </property>
        <property>
            <name>fs.defaultFS</name>
            <value>hdfs://</value>
        </property>
    -->

    <property>
        <name>juicefs.meta</name>
        <value>redis://:redis@my-redis-master.redis.svc.cluster.local:6379/1</value>
    </property>
<!--不能配置，会导致teragen/terasort测试不过，可能这个目录如果是root权限创建的，hdfs无法访问，不配置会在hdfs的home的.cache目录存放
    <property>
        <name>juicefs.cache-dir</name>
        <value>/jfscache</value>
    </property>
-->
    <property>
        <name>juicefs.cache-size</name>
        <value>1024</value>
    </property>
    <property>
        <name>juicefs.access-log</name>
        <value>/tmp/juicefs.access.log</value>
    </property>

    <property>
        <name>hadoop.tmp.dir</name>
        <value>/app/hdfs/hadoop/tmpdir</value>
    </property>

<!--    <property>
        <name>hadoop.proxyuser.kyuubi.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.kyuubi.users</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.kyuubi.groups</name>
        <value>*</value>
    </property>-->
</configuration>
