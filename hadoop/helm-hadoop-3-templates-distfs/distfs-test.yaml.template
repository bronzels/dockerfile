apiVersion: v1
kind: Pod
metadata:
  name: distfs-test
  labels:
    app: nginx
spec:
  containers:
    - name: distfs-test
      image: harbor.my.org:1080/chenseanxy/hadoop-ubussh-distfs-test:3.2.1-nolib
      imagePullPolicy: Always
      command: ["tail"]
      args: ["-f", "/dev/null"]
      resources:
        requests:
          memory: "16Gi"
          cpu: "4000m"
        limits:
          memory: "16Gi"
          cpu: "4000m"
      securityContext:
        privileged: true
        capabilities:
          add: ["SYS_ADMIN"]
